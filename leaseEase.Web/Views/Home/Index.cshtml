@using leaseEase.Domain.Models.Off
@model dynamic
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}
@using System.Web.Optimization
<!-- Perfect ws -->
<section class="bg-home" id="home">
    <div class="index-container-1">
        <div class="texts-ind1">
            <p class="ind-t1">Find your perfect workspace!</p>
            <p class="ind-t2">Search by location or type for ideal office spaces tailored to your needs. Discover premium amenities and flexible leasing options.</p>
        </div>
        <div class="ind-search">
            <div class="categories-row">
                @foreach (TypesOfOffice type in Model.TypesOfOffice)
                {
                <p data-type-id="@type.Id" class="search-cat">@Html.DisplayFor(modelItem => type.Name)</p>
                }
            </div>
            <div class="search-box">
                <input id="searchInput" class="input-search" placeholder="Enter the location you need" />
                <a id="searchLink" class="search-image link-footer" href="#">
                    <img src='~/Content/images/Searchind.svg' alt="" class="search-image" height="21" />
                </a>
            </div>
        </div>
    </div>
</section>
<!-- Perfect ws -->
<!-- Popular on LeaseEase -->
<h1 class="ind-t3">Popular on LeaseEase:</h1>
<div class="popular-offices">
    <!-- Offices -->
    <div class="office-list">
        @foreach (Office office in Model.Office)
        {
            <!-- Office card!!! -->
            <a href="@Url.Action("Details", "Office", new { id = office.Id })">
                <div class="office-card">
                    <div style="background-image: url('data:image/png;base64,@Convert.ToBase64String(office.Image)');" class="office-image"></div>
                    <div class="office-inf">
                        <p class="office-name">@Html.DisplayFor(modelItem => office.Name)</p>
                        <div class="price-rating">
                            <p class="office-price">$@Html.DisplayFor(modelItem => office.Price)</p>
                            <p class="office-mo">/mo</p>
                            <div class="rating" data-rating="@Html.DisplayFor(modelItem => office.Rating)">
                                <span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span>
                            </div>
                        </div>
                        <p class="office-desc">@Html.DisplayFor(modelItem => office.Description)</p>
                        <div class="office-extra">
                            <img src="~/Content/images/max-persons.svg" alt="" class="extra-img" width="18" />
                            <p class="extra">max @Html.DisplayFor(modelItem => office.TeamSize) persons</p>
                        </div>
                        <div class="office-extra">
                            <img src="~/Content/images/Location.svg" alt="" class="extra-img" width="18" />
                            <p class="extra">@Html.DisplayFor(modelItem => office.Location)</p>
                        </div>
                        <div class="office-extra">
                            <img src="~/Content/images/office-type.svg" alt="" class="extra-img" width="18" />
                            <p class="extra">@Html.DisplayFor(modelItem => office.Type.Name)</p>
                        </div>
                    </div>
                </div>
            </a>
            <!-- Office card!!! -->
        }
    </div>
    <!-- Offices -->
</div>
<!-- Popular on LeaseEase -->
<!-- Office types -->
<h1 class="ind-t3">Find out about our office types</h1>
<div class="office-types-arrows">
    <img src="~/Content/images/arr-left.svg" alt="" class="arr" width="16" onclick="showPreviousT()"/>
    <div class="office-types-row">
        @foreach (TypesOfOffice officetype in Model.TypesOfOffice)
        {
            <div class="type-row">
                <!--TYPE CARD-->
                <div class="type-card" style="background-image: url('data:image/png;base64,@Convert.ToBase64String(officetype.Image)')">
                    <div class="type-info">
                        <p class="type-name">@Html.DisplayFor(modelItem => officetype.Name):</p>
                        <p class="type-desc">@Html.DisplayFor(modelItem => officetype.Description)</p>
                    </div>
                </div>
                <!--TYPE CARD-->
                </div>
                }
            </div>
            <img src="~/Content/images/arr-right.svg" alt="" class="arr" width="16" onclick="showNextT()" />
        </div>
<!-- Office types -->
<!-- Become Landlord -->
<div class="become-landlord">
    <div class="shadow-group">
        <img src="~/Content/images/logo-l.svg" alt="" class="logo-light" height="95" />
        <p class="ind-t4">Ready to Become a Landlord?</p>
        <p class="ind-t5">Start your rental business now!</p>
        <button type="button" class="bec-landlord">Start</button>
    </div>
</div>
<!-- Become Landlord -->
<!-- Facilities -->
<h1 class="ind-t3">Find out about our facilities</h1>
<div class="faci-arrows">
    <img src="~/Content/images/arr-left.svg" alt="" class="arr" width="16" onclick="showPreviousF()" />
    <div class="facility-list" id="facilitiesContainer">
        @foreach (Facility facility in Model.Facilities)
        {
            <div class="faci-row">
                <!--FACI CARD-->
                <div class="faci-card" style="background-image: url('data:image/png;base64,@Convert.ToBase64String(facility.Image)')">
                    <div class="faci-info">
                        <p class="faci-name">@Html.DisplayFor(modelItem => facility.Name)</p>
                    </div>
                </div>
                <!--FACI CARD-->
            </div>
        }
    </div>
    <img src="~/Content/images/arr-right.svg" alt="" class="arr" width="16" onclick="showNextF()" />
</div>
<!-- Facilities -->
<!-- Why LeaseEase -->
